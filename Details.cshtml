@model Laptops
@{ 
    ViewData["Title"] = "Details";
}
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading">@Model.Name</h1>
        <h5>@Model.Price</h5>
    </div>

</section>
<div class="container">
    <div class="row">
        <div class="col-lg-4">
            <img src="~/Images/@Model.Image" class="img-fluid" alt="@Model.Name image" />

        </div>
        <div class="col-lg-8">
            <p>@Model.Brand</p>
            <a class="btn btn-lg btn-primary" href="/home/order/@Model.Id">Buy</a>

        </div>

    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>